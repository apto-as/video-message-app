# Video Message App Environment Configuration
# OpenVoice V2 + VOICEVOX + D-ID ハイブリッドシステム

# === D-ID API設定 ===
# D-IDのAPIキーを設定してください（必須）
DID_API_KEY=your_did_api_key_here

# === VOICEVOX設定 ===
# VOICEVOXエンジンのベースURL（通常は変更不要）
VOICEVOX_BASE_URL=http://voicevox:50021

# === OpenVoice V2設定 ===
# OpenVoice APIのURL（ローカル実行時）
OPENVOICE_API_URL=http://localhost:8001

# === ネットワーク設定 ===
# バックエンドAPIポート（元の設計通り）
BACKEND_PORT=55433

# フロントエンドWebUIポート（元の設計通り）
FRONTEND_PORT=55434

# VOICEVOXエンジンポート（標準）
VOICEVOX_PORT=50021

# === 開発設定 ===
# 開発モード（development/production）
NODE_ENV=development

# デバッグレベル（DEBUG/INFO/WARNING/ERROR）
LOG_LEVEL=INFO

# === セキュリティ設定 ===
# CORS許可オリジン（フロントエンドURL）
CORS_ORIGINS=http://localhost:55434

# === パフォーマンス設定 ===
# VOICEVOX CPU スレッド数（Mac環境では控えめに設定）
VOICEVOX_CPU_NUM_THREADS=2

# Docker メモリ制限（GB単位）
VOICEVOX_MEMORY_LIMIT=2
BACKEND_MEMORY_LIMIT=1
FRONTEND_MEMORY_LIMIT=1

# === ストレージ設定 ===
# 音声ファイル保存ディレクトリ
VOICE_STORAGE_DIR=./backend/storage/voices

# 一時ファイルディレクトリ
TEMP_DIR=/tmp

# === API制限設定 ===
# アップロード可能な音声ファイルサイズ（MB）
MAX_AUDIO_FILE_SIZE=100

# 生成可能なテキスト最大長（文字数）
MAX_TEXT_LENGTH=1000

# API リクエストタイムアウト（秒）
API_TIMEOUT=300

# === ヘルスチェック設定 ===
# ヘルスチェック間隔（秒）
HEALTH_CHECK_INTERVAL=30

# ヘルスチェックタイムアウト（秒）
HEALTH_CHECK_TIMEOUT=10

# ヘルスチェック開始待機時間（秒）
HEALTH_CHECK_START_PERIOD=60

# ヘルスチェック失敗許容回数
HEALTH_CHECK_RETRIES=3